# .env - Environment Configuration File
# Place this file in your project root directory (same level as config.py)
# DO NOT commit this file to version control - add it to .gitignore

# =============================================================================
# APPLICATION SETTINGS (used by your existing config.py)
# =============================================================================
# Set to true for development, false for production
DEBUG=true

# Application host and port
HOST=127.0.0.1
PORT=8050

# Application title
APP_TITLE=Node Management System

# =============================================================================
# DATABASE SETTINGS (used by your existing config.py)
# =============================================================================
# Database file path (will be created if it doesn't exist)
# If not set, defaults to data/db.sqlite3
# DB_PATH=data/db.sqlite3

# =============================================================================
# LOGGING SETTINGS (used by your existing config.py)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# NODES MODULE SETTINGS
# =============================================================================
# Field length constraints for validation
MAX_NAME_LENGTH=255
MAX_IDENTIFIER_LENGTH=100
MAX_DESCRIPTION_LENGTH=1000

# Table pagination settings
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Alert display durations (in milliseconds)
SUCCESS_ALERT_DURATION=3000
ERROR_ALERT_DURATION=4000
WARNING_ALERT_DURATION=5000
INFO_ALERT_DURATION=3000

# Feature toggles - set to true/false to enable/disable features
ENABLE_BULK_OPERATIONS=true
ENABLE_CSV_EXPORT=true
ENABLE_PRINT_FUNCTION=true
AUTO_REFRESH_ON_EDIT=true

# Performance settings
BATCH_SIZE=100
CACHE_TIMEOUT=300
MAX_CONCURRENT_OPS=10

# Security settings
VALIDATE_UUIDS=true
SANITIZE_INPUTS=true
MAX_FILE_SIZE_MB=10